{
  "version": "1.1.0",
  "id": "@shopgate-project/category-drawer",
  "components": [
    {
      "id": "TabBarBrowse",
      "path": "frontend/portals/TabBar/TabBarBrowse/index.jsx",
      "target": "tab-bar.browse",
      "type": "portals"
    },
    {
      "id": "subscriptions",
      "path": "frontend/subscriptions/index.js",
      "type": "subscribers"
    },
    {
      "id": "categoryTree",
      "path": "frontend/reducers/index.js",
      "type": "reducers"
    },
    {
      "id": "CategoryDrawerSearchBarBurgerIcon",
      "path": "frontend/portals/SearchBarBurgerIcon/index.jsx",
      "target": "persistent-search-bar.input.wrapper.before",
      "type": "portals"
    },
    {
      "id": "CategoryDrawerNavDrawer",
      "path": "frontend/portals/NavDrawer/index.jsx",
      "target": "app.globals",
      "type": "portals"
    }
  ],
  "configuration": {
    "showTabBarBrowse": {
      "type": "admin",
      "destination": "frontend",
      "default": false,
      "params": {
        "label": "true/false to show the Tab Bar Browse Icon",
        "type": "bool"
      }
    },
    "showSearchBarNavDrawer": {
      "type": "admin",
      "destination": "frontend",
      "default": true,
      "params": {
        "label": "true/false to show the Search Bar Browse Icon",
        "type": "bool"
      }
    },
    "categoryContentMap": {
      "type": "admin",
      "default": [
        {
          "categoryName": "Neu",
          "content": "<img src=\"https://cdn.mey.com/media/wysiwyg/megamenue-teaser_damen_new_left_800x600px.jpg\" /><p><strong>Die neusten Dessous-Trends für Sie.</strong></p><a href=\"/category/383235\"><span>Jetzt Shoppen</span></a><img src=\"https://cdn.mey.com/media/wysiwyg/megamenue-teaser_damen_new_right_800x600px.jpg\" /><p><strong>Unsere Nachtwäsche-Looks der neusten Kollektion.</strong></p><a href=\"\"><span>Jetzt entdecken</span></a>"
        },
        {
          "categoryName": "Dessous",
          "content": "<img src=\"https://cdn.mey.com/media/wysiwyg/megamenue-teaser_damen_dessous_left_800x600px.jpg\" /><img src=\"https://cdn.mey.com/media/wysiwyg/megamenue-teaser_damen_dessous_left_800x600px.jpg\" />"
        }
      ],
      "destination": "frontend",
      "params": {
        "label": "Mapping for tag and image srcs",
        "description": "The various tags/properties and src associations for extension. The badge hierarchy for items with multiple trigger tags is determined by array.",
        "type": "json"
      }
    },
    "credentials": {
      "type": "bigApiCredentials",
      "destination": "backend"
    },
    "requestTimeout": {
      "type": "static",
      "destination": "backend",
      "params": {
        "value": {
          "bigApi": 15000,
          "token": 2000
        }
      }
    }
  }
}
